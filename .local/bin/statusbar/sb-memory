#!/bin/sh
# Display RAM usage.

case "$BLOCK_BUTTON" in
	1) xdotool key super+a ;;
	2) setsid -f "$TERMINAL" -e "$EDITOR" "$0";;
esac

free_mib="$(free --mebi | grep '^Mem:' | tr -s ' ' | cut -d' ' -f3)"
free_gib="$(echo "scale=2; $free_mib / 1024" | bc)"

echo "^c#D19A66^î¿…  $(printf "%.2f" "$free_gib")G"
