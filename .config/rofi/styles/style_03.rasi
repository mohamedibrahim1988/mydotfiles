configuration {
	modi:                       "drun,run,filebrowser,window";
    show-icons:                 true;
    disable-history:            true;
    application-fallback-icon: 	"Adwaita";
    display-drun:               "Apps";
    display-run:                "Run";
    display-filebrowser:        "Files";
    display-window:             "Windows";
	drun-display-format:        "{name}";
	window-format:              "{w} · {c}";
    font:                       "JetBrainsMono Nerd Font 10";
}

@import "../colors/color.rasi"

window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       760px;
    x-offset:                    0px;
    y-offset:                    0px;

    enabled:                     true;
    border-radius:               10px;
    cursor:                      "default";
    background-color:            @bg;
}


mainbox {
    enabled:                     true;
    spacing:                     10px;
    padding:                     14px 14px;
    background-color:            transparent;
    orientation:                 vertical;
    children:                    [ "inputbar", "listbox" ];
}

listbox {
    spacing:                     20px;
    background-color:            transparent;
    orientation:                 vertical;
    children:                    [ "listview" ];
}

inputbar {
    enabled:                     true;
    spacing:                     10px;
    padding:                     6px;
    border-radius:               10px;
    background-color:            transparent;
    text-color:                  @fg;
    orientation:                 horizontal;
    children:                    [ "textbox-prompt-colon", "entry", "mode-switcher" ];
}

textbox-prompt-colon {
    enabled:                     true;
    font:                        "JetBrains Mono Nerd Font 12";
    expand:                      false;
    str:                         "";
    padding:                     10px 16px 10px 12px;
    border-radius:               10px;
    background-color:            @bg-alt;
    text-color:                  inherit;
}

entry {
    enabled:                     true;
    expand:                      false;
    width:                       230px;
    padding:                     10px 12px;
    border-radius:               6px;
    background-color:            @bg-alt;
    text-color:                  inherit;
    cursor:                      text;
    placeholder:                 "Search";
    placeholder-color:           inherit;
}

mode-switcher{
    enabled:                     true;
    spacing:                     5px;
    background-color:            transparent;
    text-color:                  @fg;
}

button {
    width:                       100px;
    padding:                     10px;
    border-radius:               6px;
    background-color:            @bg-alt;
    text-color:                  inherit;
    cursor:                      pointer;
}

button selected {
    background-color:            @active;
    text-color:                  @bg;
}

scrollbar {
    handle-width:                10px ;
    handle-color:                @selected;
    background-color:            @bg-alt;
}

listview {
    enabled:                     true;
    columns:                     6;
    lines:                       4;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   true;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               false;

    spacing:                     10px;
    background-color:            transparent;
    text-color:                  @fg;
    cursor:                      "default";
}

element {
    enabled:                     true;
    spacing:                     10px;
    padding:                     10px;
    border-radius:               10px;
    background-color:            transparent;
    text-color:                  @fg;
    cursor:                      pointer;
    orientation:                 vertical;
}

element normal.normal {
    background-color:            inherit;
    text-color:                  inherit;
}

element normal.urgent {
    background-color:            @urgent;
    text-color:                  @fg;
}

element normal.active {
    background-color:            @selected;
    text-color:                  @fg;
}

element selected.normal {
    background-color:            @active;
    text-color:                  @bg;
}

element selected.urgent {
    background-color:            @urgent;
    text-color:                  @fg;
}

element selected.active {
    background-color:            @urgent;
    text-color:                  @fg;
}

element-icon {
    background-color:            transparent;
    text-color:                  inherit;
    size:                        42px;
    cursor:                      inherit;
}

element-text {
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

message {
    background-color:            transparent;
}

textbox {
    padding:                     15px;
    border-radius:               15px;
    background-color:            @bg-alt;
    text-color:                  @fg;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

error-message {
    padding:                     15px;
    border-radius:               15px;
    background-color:            @bg;
    text-color:                  @fg;
}
