(defvar eww "eww -c $HOME/.config/eww")
; date
(defpoll dateval :interval "1s" "date '+%I ó°‡™ %M'")
(defpoll hour :interval "2s" "date '+%I'")
(defpoll minutes :interval "2s" "date '+%M'")
